{
  "name": "@bsonntag/react-tabs",
  "version": "0.1.0",
  "description": "Flexible tab components for react",
  "repository": "git@github.com:bsonntag/react-tabs.git",
  "license": "MIT",
  "author": "Benjamim Sonntag <benjamimsonntag@gmail.com>",
  "main": "dist/index.js",
  "scripts": {
    "bundle": "rm -rf dist && babel src --out-dir dist --ignore src/**/*.test.js",
    "bundle:watch": "babel src --out-dir dist --watch --ignore src/**/*.test.js",
    "lint": "eslint .",
    "test": "jest",
    "test:watch": "jest --watch --notify",
    "version": "npm run bundle && git add dist"
  },
  "jest": {
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "html",
      "lcov",
      "text"
    ],
    "setupFilesAfterEnv": [
      "./jest-setup.js"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/dist/",
      "/node_modules/"
    ]
  },
  "dependencies": {
    "prop-types": "^15.7.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.6.2",
    "@babel/core": "^7.6.2",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/preset-env": "^7.6.2",
    "@babel/preset-react": "^7.0.0",
    "@bsonntag/eslint-config": "^0.4.1",
    "@testing-library/jest-dom": "^4.1.0",
    "@testing-library/react": "^9.2.0",
    "babel-jest": "^24.9.0",
    "eslint": "^5.16.0",
    "husky": "^3.0.7",
    "jest": "^24.9.0",
    "lint-staged": "^9.4.0",
    "prettier": "^1.18.2",
    "react": "^16.10.0",
    "react-dom": "^16.10.0"
  },
  "peerDependencies": {
    "react": "^16.3.0"
  }
}
