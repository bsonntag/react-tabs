{
  "name": "@bsonntag/react-tabs",
  "version": "0.1.0",
  "description": "Flexible tab components for react",
  "repository": "git@github.com:bsonntag/react-tabs.git",
  "license": "MIT",
  "author": "Benjamim Sonntag <benjamimsonntag@gmail.com>",
  "main": "dist/index.js",
  "scripts": {
    "bundle": "rm -rf dist && babel src --out-dir dist --ignore src/**/*.test.js",
    "bundle:watch": "babel src --out-dir dist --watch --ignore src/**/*.test.js",
    "lint": "eslint .",
    "test": "jest",
    "test:watch": "jest --watch --notify",
    "version": "npm run bundle && git add dist"
  },
  "jest": {
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "html",
      "lcov",
      "text"
    ],
    "setupFilesAfterEnv": [
      "@testing-library/jest-dom"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/dist/",
      "/node_modules/"
    ]
  },
  "dependencies": {
    "prop-types": "^15.7.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.5",
    "@babel/core": "^7.10.5",
    "@babel/plugin-proposal-class-properties": "^7.10.4",
    "@babel/preset-env": "^7.10.4",
    "@babel/preset-react": "^7.10.4",
    "@bsonntag/eslint-config": "^0.7.0",
    "@testing-library/jest-dom": "^5.11.1",
    "@testing-library/react": "^10.4.7",
    "eslint": "^7.5.0",
    "husky": "^4.2.5",
    "jest": "^26.1.0",
    "lint-staged": "^10.2.11",
    "prettier": "^2.0.5",
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  },
  "peerDependencies": {
    "react": "^16.3.0"
  }
}
